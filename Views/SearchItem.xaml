<UserControl Name="xx" x:Class="E_Warehouse.Views.SearchItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:E_Warehouse.Views"
             xmlns:st="http://schemas.spicytaco.io/"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid VerticalAlignment="Center">
        <st:StackPanel MaxWidth="300" >
            <Label Content="Part Number Search:" FontWeight="Bold"></Label>
            <TextBox Name="SearchTextbox" ScrollViewer.HorizontalScrollBarVisibility="Auto"
                     ScrollViewer.VerticalScrollBarVisibility="Auto"
                     ScrollViewer.CanContentScroll="True"  MinHeight="40"></TextBox>
            <Button Content="Search" Width="60" HorizontalAlignment="Right" Margin="0,5,0,0" Click="Button_Click"></Button>
        </st:StackPanel>
    </Grid>
</UserControl>
